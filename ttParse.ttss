.ttParse-u {
    text-decoration: underline;
}

.ttParse-hide {
    display: none;
}

.WxEmojiView {
    align-items: center;
}

.wxEmoji {
    width: 16px;
    height: 16px;
}

.ttParse-tr {
    display: flex;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
}

.ttParse-th, .ttParse-td {
    flex: 1;
    padding: 5px;
    font-size: 28rpx;
    border-left: 1px solid #e0e0e0;
    word-break: break-all;
}

.ttParse-td:last {
    border-top: 1px solid #e0e0e0;
}

.ttParse-th {
    background: #f0f0f0;
    border-top: 1px solid #e0e0e0;
}

.ttParse-del {
    display: inline;
}

.ttParse-figure {
    overflow: hidden;
}
